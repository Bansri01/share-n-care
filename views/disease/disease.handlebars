<main>
{{#if diseaseName }}
<h1>
    {{diseaseName}}
</h1>
{{/if}}

{{#if description }}
<dl>
    <dt>
<h2>
    Overview
</h2>
</dt>
<dd>
     {{description}}
</dd>
</dl>
{{/if}}


{{#if symptoms }}
<h2>
    Symptoms:
</h2>
<ul class="symptoms">
    {{#each symptoms}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}


{{#if suggestions }}
<h2>
    General Recommendations:
</h2>
<ul class="suggestions">
    {{#each suggestions}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}


{{#if medicines }}
<h2>
    Recommended Medicines:
</h2>
<ul class="medicines">
    {{#each medicines}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}
</main>