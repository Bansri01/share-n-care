<main>
    <div class="row featurette">
            <div class="col-md-7">
{{#if diseaseName }}
<h1>
    {{diseaseName}}
</h1>
{{/if}}

{{#if description }}
<dl>
    <dt>
<h2>
    Overview
</h2>
</dt>
<dd>
     {{description}}
</dd>
</dl>
{{/if}}


{{#if symptoms }}
<h2>
    Symptoms:
</h2>
<ul class="symptoms">
    {{#each symptoms}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}


{{#if suggestions }}
<h2>
    General Recommendations:
</h2>
<ul class="suggestions">
    {{#each suggestions}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}


{{#if medicines }}
<h2>
    Recommended Medicines:
</h2>
<ul class="medicines">
    {{#each medicines}}
    <li><span>{{this}}</span></li>
    {{/each}} 
  </ul>
{{/if}}
</div>
<div class="col-md-5">
<div class="d-flex justify-content-center">

<div class="d-flex flex-column">
  <div class="p-2"><img src="/public/images/epilpsey.jpg" alt="Logo" width="300" height="300"></div>
  <div class="p-2"><img src="/public/images/Tuber.png" alt="Logo" width="300" height="300"></div>
  <div class="p-2">Flex item 3</div>
</div>

</div>
    </div>
    </div>

</main>