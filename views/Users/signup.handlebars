<body>
    <div class="container">
        <form class="form" id="createAccount" action="/signup" method="post" enctype="multipart/form-data">
            <h1 class="form__title">Create Account</h1>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <label for="profilePicture">Upload an image: (*) </label>
                <input type="file" id="img" name="profilePicture" accept="image/*">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="firstName">Firstname</label>
                <input type="text" id = "firstName"  class="form__input" autofocus placeholder="Firstname" name="firstName" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="lastName">Lastname</label>
                <input type="text" id="lastName" class="form__input" autofocus placeholder="Lastname" name="lastName" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="username">Username</label>
                <input type="text" id="signupUsername" class="form__input" autofocus placeholder="Username" name = "username" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="emailAddress">EmailAddress</label>
                <input type="text" id="emailAddress" class="form__input" autofocus placeholder="Email Address" name ="emailAddress" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="password">Password</label>
                <input type="password" id = "password" class="form__input" autofocus placeholder="Password" name = "password"  required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="phoneNumber">PhoneNumber</label>
                <input type="text" id = "phoneNumber" class="form__input" autofocus placeholder="Phone Number" name="phoneNumber" required>
                <div class="form__input-error-message"></div>
            </div>
             <div class="form__input-group">
                 <label for="country">Country</label>
                <input type="text" id ="country" class="form__input" autofocus placeholder="Country" name="country" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="biography">Biography</label>
                <textarea type="text" id = "Biography" class="form__input" autofocus placeholder="Biography" rows="4" cols="50" name="biography" required></textarea>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <label for="gender">Gender</label>
            <select id="genderList" class="form__input" placeholder="Gender" name="gender" class="gen" required>
                <option disabled selected hidden>Gender</option>
                <option value="Female">Female</option>
                <option value="Male">Male</option>
                <option value="other">other</option>
            </select>
            <div class="form__input-error-message"></div>
            </div>



             <div class="form__input-group">
                 <label for="userType">UserType</label>
                <select id="userType" class="form__input" placeholder="UserType" name="userType" class="gen" required>
                <option disabled selected hidden>UserType</option>
                <option value="Patient">Patient</option>
                <option value="Doctor">Doctor</option>
                </select>
                <div class="form__input-error-message"></div>
            </div>

             <div class="form__input-group">
                 <label for="dateOfBirth">DateOfBirth</label>
                <input type="date" id ="dateOfBirth"class="form__input dateInput" name="dateOfBirth" required>
                <div class="form__input-error-message"></div>
            </div>
            <div>
            {{#if error}}
            <p class="not-found">{{error}}</p>
            {{/if}}
           </div>
            <button class="form__button" type="submit">Submit</button>
            <p class="form__text">
                <a class="form__link" href="./login" id="linkLogin">Already have an account? Login</a>
            </p>
        </form>
    </div>
    <script src="/public/js/signup.js"></script>
    </body>
