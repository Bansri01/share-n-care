<link rel="stylesheet" href= "/public/css/forum.css">

<main>
 <nav class="navbar navbar-light bg-light">
  <form class="form-inline" id="searchForm" method="POST" action="/forum/search">
    <label for="search-term">Search Posts</label>
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="search-term" name="postName">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="search-submit">Search</button>
  </form>
</nav>

<h1 class="pageTitle">{{forumName}}</h1>
    {{#if hasError}}
    <p class="errors">{{error}}</p>
    {{/if}}
    <form id="addNewPost" method="POST" action="/forum/{{getDiseaseId}}">
        <label for="postTitle">Post title</label>
        </br>
        <input class="form-control" type="text" id="postTitle" name="postTitle"/>
        </br>
        <label for="postContent">Post content</label>
        </br>
        <textarea class="form-control" type="text" id="postContent" name="postContent"></textarea>
        </br>
        <button type="submit" class="btn btn-primary btn-lg btn-block" name="postSubmit">Post</button>
    </form>


    {{#if postList}}
        <ul class = "searchPosts">
            {{#each postList}}
                <li>
                    <a class="text-center" href="/forum/post/{{this._id}}">
                        <h2>{{this.title}}</h2>
                    </a>
                        <p class="content">{{this.content}}</p>
                        <p class="username">{{this.username}}</p>
                        <p class="time">{{this.postTime}}</p>
                </li>
            {{/each}}
        </ul>
    {{/if}}
</main>



